<h2>Edit the friend profile</h2>

<form action="/friends/{{_id}}/edit" method="post">
    <input type="text" name="friendName" value="{{friendName}}" >
    <input type="text" name="friendSurname" value="{{friendSurname}}" >
    <input type="date" name="birthday" value="{{birthday}}" >
    <input type="text" name="city" value="{{city}}" >
    <input type="text" name="avatar" value="{{avatar}}" >
    <button type="submit">Update friend</button>
</form>