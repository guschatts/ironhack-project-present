<h2> Presents of {{foundFriend.friendName}}:</h2>

{{#each ../foundPresent.presents}}
    <img style="width: 100px" src="{{./this.imageUrl}}" alt="{{this.presentName}}">
    <p> {{./this.presentName}}</p>
    <p> {{this.motivations}}</p>
    <p> {{this.description}}</p>
    <a href="/presents/{{id}}/edit"><button>Edit</button></a>
    <form action="/presents/{{id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
{{/each}}