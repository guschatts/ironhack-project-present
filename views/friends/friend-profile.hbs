<p>This is your friend {{friendName}} profile page!</p>

<p> Full name: {{friendName}} {{friendSurname}} </p>
<p> City: {{city}}</p>
<p> Birthday: {{birthday}}</p>
<img style="width: 150px" src="{{avatar}}" alt="avatar picture">
<br>
<a href="/friends/{{_id}}/edit"><button>Edit</button></a>
<form action="/friends/{{_id}}/delete" method="post">
    <button type="submit">Delete</button>
</form>




<form action="/friends/{{_id}}/">
  <label for="present">Choose a present:</label>
  <select id="present" name="present">
    {{#each presents}}
    <option value="{{presentName}}">{{presentName}}</option>
    {{/each}}
  </select>
  <button type="submit">Add to {{friendName}}</button>
</form>
